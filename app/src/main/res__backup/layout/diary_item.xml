<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/diary_month"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="5"
        android:textSize="32sp"
        android:textColor="@color/colorDeepBlue"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/diary_day"
        android:layout_below="@+id/diary_month"
        android:layout_alignRight="@+id/diary_month"
        android:layout_alignLeft="@+id/diary_month"
        android:text="三"
        android:textSize="20sp"
        android:textColor="@color/colorDeepBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/diary_time"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/diary_month"
        android:layout_alignTop="@+id/diary_month"
        android:text="11:10"
        android:textSize="20sp"
        android:textColor="@color/colorDeepBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/diary_title"
        android:layout_below="@+id/diary_time"
        android:layout_toEndOf="@+id/diary_day"
        android:layout_alignBottom="@+id/diary_day"
        android:gravity="bottom"
        android:layout_marginLeft="15sp"
        android:text="她和她的猫"
        android:textColor="@color/colorDeepBlue"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/diary_edit"
        android:layout_alignTop="@+id/diary_month"
        android:layout_alignBottom="@+id/diary_day"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_action_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>