<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:background="@drawable/diary_list_shape"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear1"
        android:gravity="center"
        android:layout_margin="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/month"
        android:text="6月"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/diary_list_text_color"
        android:layout_toStartOf="@+id/day"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day"
        android:layout_alignBottom="@+id/month"
        android:layout_marginTop="25dp"
        android:text="三"
        android:textSize="20dp"
        android:textColor="@color/diary_list_text_color"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/linear1"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="10:10"
            android:textColor="@color/diary_list_text_color"
        android:gravity="center"
        android:textSize="20sp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="今日吃法"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/diary_list_text_color"
            android:layout_toRightOf="@+id/month"
            /></LinearLayout>
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_diary"
        android:src="@mipmap/ic_edit_blue_45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="60dp"/>
</RelativeLayout>
