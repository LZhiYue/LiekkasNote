<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="liekkasnote.applicationpage.HomePage">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:background="@color/colorLightBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_pic"
            android:layout_margin="15dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user_name"
            android:layout_toRightOf="@id/user_pic"
            android:layout_alignBottom="@id/user_pic"
            android:layout_alignTop="@+id/user_pic"
            android:gravity="center"
            android:text="KWA+"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/diary_bar"
        android:layout_below="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/diary_icon"
            android:src="@drawable/ic_action_diary"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/diary_text"
            android:layout_toRightOf="@id/diary_icon"
            android:layout_alignTop="@id/diary_icon"
            android:layout_alignBottom="@id/diary_icon"
            android:gravity="center"
            android:text="Diary"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/diary_arrow"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/diary_icon"
            android:layout_alignTop="@id/diary_icon"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_action_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/todo_bar"
        android:layout_below="@+id/diary_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/todo_icon"
            android:src="@drawable/ic_action_todo"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/todo_text"
            android:layout_toRightOf="@id/todo_icon"
            android:layout_alignTop="@id/todo_icon"
            android:layout_alignBottom="@id/todo_icon"
            android:gravity="center"
            android:text="To-do List"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/todo_arrow"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/todo_icon"
            android:layout_alignTop="@id/todo_icon"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_action_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>


</RelativeLayout>
