<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/homepage_background"
    >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:background="@mipmap/homepage_topbar_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/user_pic"
            android:layout_margin="15dp"
            android:src="@mipmap/user_pic"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/username_manage"
            android:layout_toRightOf="@id/user_pic"
            android:layout_alignBottom="@id/user_pic"
            android:layout_alignTop="@+id/user_pic"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/user_name"
                android:gravity="center"
                android:text="迪迦奥特曼"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:shadowColor="@color/textview_shadow"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:textSize="20dp"
                android:textColor="@color/homepage_username"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_arrow_right_grey_32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="67dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/diary_bar"
        android:layout_below="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的日记"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="@color/homepage_title"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/user"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/diary_arrow"
            android:layout_gravity="right"
            android:src="@mipmap/ic_arrow_right_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/todolist_bar"
        android:layout_below="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备忘录"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="@color/homepage_title"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/user"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/todo_arrow"
            android:layout_gravity="right"
            android:src="@mipmap/ic_arrow_right_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
</LinearLayout>