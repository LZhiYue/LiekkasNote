<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_otherDiary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/messageOwner"
        android:layout_marginBottom="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="匿名用户" />


    <ImageView
        android:id="@+id/sex"
        android:layout_toRightOf="@+id/messageOwner"
        android:layout_marginLeft="5dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/messageContent"
        android:layout_marginBottom="7dp"
        android:layout_below="@+id/messageOwner"
        android:text="hello world"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/date"
        android:layout_below="@+id/messageContent"
        android:layout_alignRight="@+id/messageContent"
        android:text="2016-12-25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>